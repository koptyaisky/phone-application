<img class="phone" src="{{phone.images.[0]}}">

<button class="back-btn">Back</button>
<button class="add">Add to basket</button>

<h1>{{phone.name}}</h1>

<p>{{phone.description}}</p>

<ul class="phone-thumbs">
  {{#each phone.images}}
    <li>
      <img class="phone-thumb-img" src="{{this}}">
    </li>
  {{/each}}
</ul>